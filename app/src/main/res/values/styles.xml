<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="chipStyle">@style/Widget.MaterialComponents.Chip.Action</item>
    </style>

    <style name="AppCheckableButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:checkable">true</item>
        <item name="android:textColor">@color/colorLightGrey</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppNormalButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Widget.AppTheme.IconButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/icon_button_tint</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">@dimen/icon_button_padding</item>
        <item name="android:paddingEnd">@dimen/icon_button_padding</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
        <item name="android:minHeight">@dimen/icon_button_min_size</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorLightGrey</item>
    </style>

    <style name="LargeTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorDarkGrey</item>
    </style>

    <style name="SmallLightGreyTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorLightGrey</item>
    </style>

    <style name="PhotoFragment" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:background">#95000000</item>
        <item name="backgroundTint">#95000000</item>
        <item name="backgroundTintMode">screen</item>
    </style>

</resources>